extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='book') Book:
      select#book.form-control(type='select' placeholder='Select book' name='book' required='true')
        - book_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for book in book_list
          option(value=book._id, selected=(selected_book==book._id.toString() ? 'selected' : false) ) #{book.title}

    div.form-group
      label(for='place') Place:
      input#place.form-control(type='text' placeholder='place' name='place' required='true' value=(undefined===meeting ? '' : meeting.place))
    
    div.form-group
      label(for='date') Date of the meeting:
      input#date.form-control(type='date' name='date' value=(undefined===meeting ? '' : meeting.date_yyyy_mm_dd))

    div.form-group
      label(for='time') Time of the meeting:
      input#time.form-control(type='text' placeholder='time' name='time' required='true' value=(undefined===meeting ? '' : meeting.time))
   
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
